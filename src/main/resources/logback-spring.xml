<!-- logback-spring.xml -->
<configuration scan="true" scanPeriod="30 seconds">
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="lifeasgame"/>
    <contextName>${APP_NAME}</contextName>

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %contextName %logger{36} - traceId=%mdc{traceId:-} jobId=%mdc{jobId:-} userId=%mdc{userId:-} path=%mdc{path:-} elapsed=%mdc{elapsedTime:-}ms - %msg%n%xEx{full,5}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>${LOG_PATTERN}</pattern></encoder>
    </appender>

    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>8192</queueSize>
        <discardingThreshold>10</discardingThreshold>
        <neverBlock>true</neverBlock>
        <includeCallerData>false</includeCallerData>
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </root>

    <!-- 공통 억제 -->
    <logger name="online.lifeasgame" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="WARN"/>

    <!-- 로컬/개발: 색상/디버그 -->
    <springProfile name="local,dev">
        <property name="LOG_PATTERN"
                  value="%d{HH:mm:ss.SSS} %highlight([%thread]) %highlight(%-5level) %cyan(%logger{36}) - traceId=%mdc{traceId:-} userId=%mdc{userId:-} path=%mdc{path:-} elapsed=%mdc{elapsedTime:-}ms - %msg%n%xEx{full,5}"/>
        <logger name="online.lifeasgame" level="DEBUG"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>
    </springProfile>

    <!-- 운영: 더 억제 -->
    <springProfile name="prod">
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>
</configuration>
